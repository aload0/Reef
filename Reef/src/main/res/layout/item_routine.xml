<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/routine_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?colorSecondaryContainer"
        android:contentDescription="@string/routine_icon"
        android:src="@drawable/round_schedule_24"
        app:contentPadding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        app:tint="?colorOnSecondaryContainer" />

    <TextView
        android:id="@+id/routine_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="?colorOnSurface"
        app:layout_constraintEnd_toStartOf="@id/routine_toggle"
        app:layout_constraintStart_toEndOf="@id/routine_icon"
        app:layout_constraintTop_toTopOf="@id/routine_icon"
        tools:text="Weekend Digital Detox" />

    <TextView
        android:id="@+id/routine_schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="?colorOnSurfaceVariant"
        app:layout_constraintEnd_toEndOf="@id/routine_name"
        app:layout_constraintStart_toStartOf="@id/routine_name"
        app:layout_constraintTop_toBottomOf="@id/routine_name"
        tools:text="Weekends at 9:00 AM" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/routine_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/routine_icon" />

    <TextView
        android:id="@+id/routine_apps_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="?colorTertiaryContainer"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
        android:textColor="?colorOnTertiaryContainer"
        app:layout_constraintStart_toStartOf="@id/routine_name"
        app:layout_constraintTop_toBottomOf="@id/routine_schedule"
        tools:text="3 apps with limits" />

    <TextView
        android:id="@+id/routine_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="?colorPrimaryContainer"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
        android:textColor="?colorOnPrimaryContainer"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/routine_apps_count"
        app:layout_constraintTop_toTopOf="@id/routine_apps_count"
        tools:text="Active"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
